<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/white_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <!--    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="match_parent"-->
            <!--        android:scrollbars="vertical"></ScrollView>-->


            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:src="@mipmap/ukey"
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/et_rpwd"
                    android:hint="请输入原密码"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/ukey"
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:visibility="gone"
                    android:inputType="textPassword"
                    android:id="@+id/rpwd1"
                    android:hint="请输入新密码"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/ukey"
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:visibility="gone"
                    android:inputType="textPassword"
                    android:id="@+id/rpwd2"
                    android:hint="请再次输入新密码"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <Button
                android:textColor="@color/white"
                android:text="确定输入"
                android:background="@color/colorPrimary"
                android:id="@+id/bt_qrxg"
                android:layout_margin="50dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />



            <LinearLayout
                android:id="@+id/et_xs1"

                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/xs1"
                    android:src="@mipmap/pwd"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText

                    android:visibility="gone"
                    android:inputType="textPassword"
                    android:id="@+id/et_pwd"
                    android:hint="请输入重设密码密码"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/et_xs2"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/xs2"
                    android:visibility="gone"
                    android:src="@mipmap/pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:visibility="gone"
                    android:inputType="textPassword"
                    android:id="@+id/et_pwd_once"
                    android:hint="请再次输入密码"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:textColor="@color/white"
                android:text="确认密码"
                android:background="@color/colorPrimary"
                android:id="@+id/bt_qrcz"
                android:layout_margin="50dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>