<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">
    <include layout="@layout/layout_head"/>
    <LinearLayout

        android:id="@+id/ll_type"
        android:paddingRight="@dimen/phoenix_dimen_30"
        android:paddingLeft="@dimen/phoenix_dimen_30"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:text="选择类别"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner

            android:id="@+id/spiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_type2"
        android:paddingRight="@dimen/phoenix_dimen_30"
        android:paddingLeft="@dimen/phoenix_dimen_30"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:text="添加话题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
        android:background="@color/colorPrimary"
        android:textColor="@color/white_color"
        android:textSize="10sp"
        android:text="添加"
        android:id="@+id/addtopic"
        android:layout_width="60sp"
        android:layout_height="16sp"/>

        <Button
            android:layout_marginLeft="20sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white_color"
            android:textSize="10sp"
            android:text="重选"
            android:id="@+id/retopics"
            android:layout_width="60sp"
            android:layout_height="16sp"/>

<!--        <Spinner-->

<!--            android:id="@+id/spiner2"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content">-->

<!--        </Spinner>-->
    </LinearLayout>
    <LinearLayout

        android:id="@+id/ll_type3"
        android:paddingRight="@dimen/phoenix_dimen_30"
        android:paddingLeft="@dimen/phoenix_dimen_30"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:text="选中话题："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/xstopic"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <EditText
        android:padding="10dp"
        android:id="@+id/et_content"
        android:layout_margin="@dimen/dp_10"
        android:gravity="start"
        android:textSize="@dimen/sp_14"
        android:textColorHint="@color/jztint_color"
        android:hint="写点什么吧...."
        android:maxLength="200"
        android:background="@drawable/shap_4"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>